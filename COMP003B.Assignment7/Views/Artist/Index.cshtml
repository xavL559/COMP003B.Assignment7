@model IEnumerable<COMP003B.Assignment7.Models.ArtistViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Artist</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Artist">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Artist">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Artist">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
