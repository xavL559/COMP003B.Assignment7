@model COMP003B.Assignment7.Models.ArtistViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Artist</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist)
        </dd>
    </dl>
</div>

<div class="col-md-4">
    <h4>Albums</h4>
    <ul>
        @foreach (AlbumViewModel albumViewModel in ViewBag.Album)
        {
            <li>@albumViewModel.AlbumTitle</li>
        }
    </ul>
</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model?.Artist">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
